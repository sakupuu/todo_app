<h1> Todo List! </h1>

<p>There are  <%= @todos.count %> todos</p>

<table>
  <thead>
    <tr>
      <th>Todo</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.title %></td>
      <td><%= todo.description %></td>
      <td><%= link_to todo.title, todo_path(todo.id)%></td>
      <td><%= link_to "edit", edit_todo_path(todo[:id]),class: "btn btn-success"%></td>
      <td><%= link_to "delete", todo, method: :delete, data: { confirm: "You sure?" },class: "btn btn-danger"%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h1>New</h1>



<%= form_with model: @todo do |f| %>
  <div class="field">
  <%= f.label :Title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :Description %><br>
  <%= f.text_area :description %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>





